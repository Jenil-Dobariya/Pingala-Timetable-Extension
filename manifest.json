{
    "manifest_version": 3,
    "name": "Class Hai Bhai!",
    "description": "A tool designed to enhance student experience by simplifying timetable management and providing timely class notifications. ",
    "version": "1.0",
    "description":"Effortless timetable management and timely class notifications to optimize the scheduling experience for IITK students.",
    "icons":{
        "128":"./icons/pclub.png",
        "48":"./icons/pclub.png",
        "32":"./icons/pclub.png",
        "16":"./icons/pclub.png"
    },
    "permissions": [
        "notifications",
        "alarms",
        "storage",
        "scripting",
        "tabs",
        "downloads",
        "activeTab"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": ["<all_urls>"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "./icons/pclub.png"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ]
}
